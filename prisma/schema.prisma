generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Watchlist {
  id        String   @id @default(uuid())
  name      String   @unique
  terms     String[]
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id              String    @id @default(uuid())
  description     String
  severity        String
  summary         String
  suggestedAction String
  createdAt       DateTime  @default(now())
  watchlist       Watchlist @relation(fields: [watchlistId], references: [id])
  watchlistId     String
}